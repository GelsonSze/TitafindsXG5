<section id="update-popup" class="popup">
    <button class="update-popup_close popup-close"><i class="bx bx-x"></i></button>
    <h1>Update User</h1>

    <form id="update-form" class="create-update-form">
        <div id="popup-form-wrapper">
            <div id="popup-left-wrapper" class="popup-default-wrapper">
                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="update-username" id="username-label">Username</label>
                        <input
                            type="text"
                            class="create-update-input"
                            id="update-username"
                            name="username"
                        />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="update-first-name" id="first-name-label">First Name</label>
                        <input
                            type="text"
                            class="create-update-input"
                            id="update-first-name"
                            name="firstName"
                        />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="update-last-name" id="last-name-label">Last Name</label>
                        <input
                            type="text"
                            class="create-update-input"
                            id="update-last-name"
                            name="lastName"
                        />
                    </div>
                </div>

                <p class="text-error update-text-error">Error</p>
            </div>
        </div>
        <div class="command">
            <button type="reset" id="cancel-update-button">Cancel</button>
            <button type="submit" id="update-user-button">Update</button>
        </div>
    </form>
</section>
