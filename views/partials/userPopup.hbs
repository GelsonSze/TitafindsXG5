<section id="user-popup" class="popup">
    <button class="user-popup_close">X</button>
    <h1 id="popup-title">Add User</h1>

    <form id="form" enctype="multipart/form-data">
        <div id="popup-form-wrapper">
            <div id="popup-left-wrapper">
                {{! Product Name / Product Code / Product Image }}
                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="code">Username</label><br />
                        <input type="text" id="username" name="username" /><br />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="name">First Name</label><br />
                        <input type="text" id="first-name" name="firstName" /><br />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="code">Last Name</label><br />
                        <input type="text" id="last-name" name="lastName" /><br />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="name">Password</label><br />
                        <input type="password" id="password" name="password" /><br />
                    </div>
                </div>

                <div class="popup-row-wrapper">
                    <div class="item-wrapper">
                        <label for="code">Confirm Password</label><br />
                        <input type="password" id="confirm-password" name="confirmPassword" /><br />
                    </div>
                </div>
            </div>
        </div>
        <div class="command">
            <button type="sumbit" id="create">Add</button>
            <button type="reset">Cancel</button>
        </div>
    </form>
</section>
