<main>
  <section>
    <section id="main-control">
        <h1>Inventory List</h1>
        <div id="add">
            <button class = "popup_open">Add Item</button>
        </div>
    </section>

    <section id="popup">
        <button class = "popup_close">X</button>
        <center><h3>Add New Item</h3></center>
        
        <form id="form" enctype="multipart/form-data">

            <div class = "itemFirst">
                <label>Product Name</label><br>
                <input type="text" id="productName" name = "name"><br>
            </div>

            <div class = "item">
                <label>Product Image</label><br>
                <input type="file" id="productImage"><br>       <!-- add to db --> 
            </div> <br>

            <div class = "itemFirst">
                <label>Type</label><br>                         <!-- change in db --> 
                <select id = "productType" name = "type">
                    <option value = "" disabled selected>Select</option>
                    <option value = "Anklet">Anklet</option>
                    <option value = "Bracelet">Bracelet</option>
                    <option value = "Watch">Watch</option>
                </select> <br>
            </div>

            <div class = "item">
                <label>Classification</label><br>
                <select id = "prodClassification" name = "classification">
                    <option value = "" disabled selected>Select</option>
                    <option value = "Gold">Gold</option>
                    <option value = "Silver">Silver</option>
                    <option value = "Bronze">Bronze</option>
                </select> <br>
            </div>

            <div class = "item">
                <label>Brand</label><br>
                <select id = "productBrand" name = "brand">
                    <option value = "" disabled selected>Select</option>
                    <option value = "Cartier">Cartier</option>
                    <option value = "Swarovski">Swarovski</option>
                    <option value = "Tiffany">Tiffany</option>
                </select> <br>
            </div>

            <div class = "itemFirst">
                <label>Design</label><br>
                <select id = "prodDesign" name = "design">
                    <option value = "" disabled selected>Select</option>
                    <option value = "Simple">Simple</option>
                    <option value = "Complex">Complex</option>
                    <option value = "Intricate">Intricate</option>
                </select> <br>
            </div>

            <div class = "item">
                <label>Selling Type</label><br>
                <select id = "sellingtype" name = "sellingType">
                    <option value = "" disabled selected>Select</option>
                    <option value = "VIP">VIP</option>
                    <option value = "Expensive">Expensive</option>
                    <option value = "Special">Special</option>
                </select> <br>
            </div>

            <div class = "item">
                <label>Item Status</label><br>
                <select id = "itemStatus" name = "status">                              <!-- change in db -->
                    <option value = "" disabled selected>Select</option>
                    <option value = "Sold Out">Sold Out</option>
                    <option value = "Available">Available</option>
                    <option value = "Low Stock">Low Stock</option>
                </select> <br>
            </div>

            <div class = "itemFirst">
                <label>Length</label><br>                               <!-- add to db --> 
                <input type="text" id="prodLength" name = "length">
                <select id = "prodLength" name = "length-unit">                              <!-- change in db -->
                    <option value = "cm">cm</option>
                    <option value = "inch">inch</option>
                    <option value = "feet">feet</option>
                </select> <br>
            </div>

            <div class = "item">
                <label>Size</label><br>
                <input type="text" id="prodSize" name = "size">
                <select id = "prodSize" name = "size-unit">                              <!-- change in db -->
                    <option value = "cm">cm</option>
                    <option value = "inch">inch</option>
                    <option value = "feet">feet</option>
                </select> <br>
            </div>

            <div class = "itemFirst">
                <label>Weight</label><br>
                <input type="text" id="prodWeight" name = "weight"><br>
            </div>

            <div class = "item">
                <label>Stock Quantity</label><br>
                <input type="text" id="prodQuantity" name = "quantity"><br>
            </div>

            <div class = "item">
                <label>Selling Price</label><br>
                <input type="text" id="sellingPrice" name = "sellingPrice"><br>
            </div>

            <div class = "item">
                <label>Purchase Price</label><br>
                <input type="text" id="purchasePrice" name = "purchasePrice"><br>
            </div>

            <div class = "command">                   
                <button type="sumbit" id="create">Create Item</button>
                <button type="reset">Discard</button>
            </div>
        </form>
    </section>
  
  </section>

