{{>sidebar}}
<main class="main-section">
    <section>
        
        <form id="password-form" enctype="multipart/form-data">
            <div id="form-wrapper">
                <h1>Change Password</h1>

                <div id="change-password-wrapper">

                    <label for="new-password" id = "new-password-label">New Password</label><br />
                    <input type="text" id="new-password" name="new-password" /><br />

                    <label for="confirm-password" id = "confirm-password-label">Confirm Password</label><br />
                    <input type="text" id="confirm-password" name="confirm-password" /><br />

                    <p class="pass-text-error"></p>
                </div>
                <div class="command">
                    <button type="button" id="change">Change</button>
                </div>
            </div>
        </form>
    </section>
</main>
