{
  "name": "titafindsxg5",
  "version": "0.0.0",
  "description": "project management system",
  "main": "index.js",
  "type": "module",
  "prettier": {
    "tabWidth": 4,
    "trailingComma": "es5",
    "printWidth": 100,
    "overrides": [
      {
        "files": "*.hbs",
        "options": {
          "parser": "html"
        }
      },
      {
        "files": "*.css",
        "options": {
          "printWidth": 80
        }
      }
    ]
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "nodemon index.js",
    "format": "prettier --write \"**/*.{js,hbs,css}\"",
    "clean-local": "npx git-removed-branches --prune"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GelsonSze/TitafindsXG5.git"
  },
  "author": "G5",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/GelsonSze/TitafindsXG5/issues"
  },
  "homepage": "https://github.com/GelsonSze/TitafindsXG5#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "connect-mongo": "^4.6.0",
    "dotenv": "^16.0.3",
    "express": "^4.18.1",
    "express-csp-header": "^5.1.0",
    "express-handlebars": "^6.0.6",
    "express-mongo-sanitize": "^2.2.0",
    "express-session": "^1.17.3",
    "git-removed-branches": "^2.0.1",
    "helmet": "^6.0.0",
    "mongodb": "^4.10.0",
    "mongoose": "^6.6.5",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "passport": "^0.6.0"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npx lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,hbs,css}": [
      "prettier --write"
    ]
  }
}
